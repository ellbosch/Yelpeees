	<head>

		<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
		<script>
		    var visible = true;
			// This function is called by jQuery on load / render
			// of the document.  It can be used to initialize code
		  $(document).ready(function() {

		  	$("#Search").click(function() {
		      $("#error").html("");
		      if ($("input[name='food']").val().trim() == "") {
		        $("#error").html("Empty Food Field");
		      }
		      else {
		    		$.ajax({
			          url: "/search",
			          type: "POST",
			          data: "food=" + $("input[name='food']").val() + "&restaurant=" + $("input[name='restaurant']").val() + "&location=" + $("input[name='location']"),
			          success: function(response) {
			            if (response.success) {
			            	console.log("got data from backend");
			            	console.log(response.data);
			              window.location = '/home';
			            }
			            else  {
			              $("#error").html("Invalid Restaurant");
			            }
			          },
			          error: function (xhr, ajaxOptions, thrownError) {
			            $("#error").html(xhr.responseText);
			          }
		    		});
		      }
		    });
		  });

		</script>
				
